#include <msp430.h>
#include "sound.h"
#include "buzzer.h"

void sound()
{ //frequency is raised
  switch(state)
    {
    case 0:
      cycle = 5000;
      state++;
      break;
    case 1:
      cycle = 4000;
      state++;
      break;
    case 2:
      cycle = 2000;
      state++;
      break;
    case 3:
      cycle = 1000;
      state = 0;
      break;
    default:
      cycle = 5000;
      state = 1;
    }
  buzzer_set_period(cycle);
}
